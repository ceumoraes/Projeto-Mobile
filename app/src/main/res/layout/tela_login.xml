<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- AppBar -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="146dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/menuButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/menu"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imageView"
                    app:srcCompat="@drawable/menu" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/triangulo_page" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <!-- Conteúdo fixo abaixo da AppBar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:layout_marginTop="146dp">

            <!-- Título -->
            <TextView
                android:id="@+id/contactTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Gostaria de entrar em contato?"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="@font/montserrat"
                android:textAlignment="center"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Descrição -->
            <TextView
                android:id="@+id/contactDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Trabalhos, contatos, dúvidas e mais informações podem ser tiradas diretamente comigo!"
                android:textSize="14sp"
                android:textColor="#000000"
                android:fontFamily="@font/montserrat"
                android:textAlignment="center"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/contactTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"/>

            <!-- Qual seu nome? -->
            <TextView
                android:id="@+id/nameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qual seu nome?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="@font/montserrat"
                app:layout_constraintTop_toBottomOf="@id/contactDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <!-- Campo de nome -->
            <EditText
                android:id="@+id/nameInput"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/input_background"
                android:hint="Digite seu nome"
                android:padding="12dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat"
                android:inputType="textPersonName"
                app:layout_constraintTop_toBottomOf="@id/nameLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"/>

            <!-- Qual seu e-mail? -->
            <TextView
                android:id="@+id/emailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qual seu e-mail?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="@font/montserrat"
                app:layout_constraintTop_toBottomOf="@id/nameInput"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <!-- Campo de e-mail -->
            <EditText
                android:id="@+id/emailInput"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/input_background"
                android:hint="Digite seu e-mail"
                android:padding="12dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat"
                android:inputType="textEmailAddress"
                app:layout_constraintTop_toBottomOf="@id/emailLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"/>

            <!-- Sua mensagem -->
            <TextView
                android:id="@+id/messageLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sua mensagem"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="@font/montserrat"
                app:layout_constraintTop_toBottomOf="@id/emailInput"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <!-- Campo de mensagem -->
            <EditText
                android:id="@+id/messageInput"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:background="@drawable/input_background"
                android:hint="Digite sua mensagem..."
                android:padding="12dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:maxLines="4"
                app:layout_constraintTop_toBottomOf="@id/messageLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"/>

            <!-- Botão enviar -->
            <Button
                android:id="@+id/sendButton"
                android:layout_width="170dp"
                android:layout_height="48dp"
                android:text="Enviar"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat"
                android:background="@drawable/button_black"
                app:layout_constraintTop_toBottomOf="@id/messageInput"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <include
        layout="@layout/sidebar_layout"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"/>
</androidx.drawerlayout.widget.DrawerLayout>
