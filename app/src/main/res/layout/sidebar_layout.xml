<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_sidebar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRABALHOS"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELOS"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTATO"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat"
        android:layout_marginStart="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Behance row -->
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/behance" />


        <View
            android:id="@+id/barBehance"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/black"
            app:layout_constraintTop_toTopOf="@id/imageView3"
            app:layout_constraintBottom_toBottomOf="@id/imageView3"
            app:layout_constraintStart_toEndOf="@id/imageView3"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Behance"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/imageView3"
            app:layout_constraintStart_toEndOf="@id/barBehance"
            app:layout_constraintTop_toTopOf="@id/imageView3" />

        <!-- Instagram row -->
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView3"
            app:srcCompat="@drawable/instagram" />

        <View
            android:id="@+id/barInstagram"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/black"
            app:layout_constraintTop_toTopOf="@id/imageView5"
            app:layout_constraintBottom_toBottomOf="@id/imageView5"
            app:layout_constraintStart_toEndOf="@id/imageView5"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Instagram"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/imageView5"
            app:layout_constraintStart_toEndOf="@id/barInstagram"
            app:layout_constraintTop_toTopOf="@id/imageView5" />

        <!-- Youtube row -->
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView5"
            app:srcCompat="@drawable/youtube" />

        <View
            android:id="@+id/barYoutube"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/black"
            app:layout_constraintTop_toTopOf="@id/imageView6"
            app:layout_constraintBottom_toBottomOf="@id/imageView6"
            app:layout_constraintStart_toEndOf="@id/imageView6"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Youtube"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/imageView6"
            app:layout_constraintStart_toEndOf="@id/barYoutube"
            app:layout_constraintTop_toTopOf="@id/imageView6" />

        <!-- Bluesky row -->
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView6"
            app:srcCompat="@drawable/bluesky" />

        <View
            android:id="@+id/barBluesky"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/black"
            app:layout_constraintTop_toTopOf="@id/imageView4"
            app:layout_constraintBottom_toBottomOf="@id/imageView4"
            app:layout_constraintStart_toEndOf="@id/imageView4"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Bluesky"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/imageView4"
            app:layout_constraintStart_toEndOf="@id/barBluesky"
            app:layout_constraintTop_toTopOf="@id/imageView4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>